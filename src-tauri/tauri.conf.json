{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "distillation-tower-monitor",
  "version": "0.2.0",
  "identifier": "com.distillation-tower-monitor.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Distillation Tower Monitor",
        "width": 1024,
        "height": 600,
        "minWidth": 1224,
        "minHeight": 800,
        "maximized": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
